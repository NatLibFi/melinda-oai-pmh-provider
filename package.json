{
	"name": "@natlibfi/melinda-oai-pmh-provider",
	"description": "Melinda OAI-PMH provider",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/melinda-oai-pmh-provider",
	"bugs": {
		"url": "https://github.com/natlibfi/melinda-oai-pmh-provider/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/melinda-oai-pmh-provider.git"
	},
	"license": "Apache-2.0",
	"version": "2.0.0-alpha.2",
	"main": "./dist/index.js",
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"start": "node dist/index.js",
		"cli": "node dist/cli.js",
		"lint": "eslint src",
		"lint:dev": "eslint --fix src",
		"test:base": "cross-env NODE_ENV=test nyc mocha --require @babel/register --parallel",
		"test": "npm run lint && npm run test:base -- 'src/**/*.spec.js'",
		"test:dev": "npm run lint:dev && npm run test:base -- 'src/**/*.spec.js' && npm run coverage",
		"coverage": "nyc check-coverage --per-file",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist --minified",
		"build:dev": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
		"watch:test": "cross-env DEBUG=1 NODE_ENV=test nodemon -w src --exec 'npm run test:dev'",
		"watch:dev": "cross-env DEBUG=1 nodemon -w src --exec 'babel-node src/index.js'"
	},
	"dependencies": {
		"@babel/runtime": "^7.22.6",
		"@natlibfi/marc-record": "^7.2.2",
		"@natlibfi/marc-record-serializers": "^10.0.6",
		"@natlibfi/melinda-backend-commons": "^2.2.1",
		"@natlibfi/melinda-commons": "^13.0.5",
		"@natlibfi/oracledb-aleph": "^6.0.0-dev",
		"express": "^4.18.2",
		"http-status": "^1.6.2",
		"langs": "^2.0.0",
		"moment": "^2.29.4",
		"xml2js": ">=0.6.2 <1.0.0"
	},
	"devDependencies": {
		"@babel/cli": "latest",
		"@babel/core": "latest",
		"@babel/eslint-parser": "latest",
		"@babel/node": "latest",
		"@babel/preset-env": "latest",
		"@babel/register": "latest",
		"@natlibfi/eslint-config-melinda-backend": "^3.0.0",
		"@natlibfi/fixugen": "^2.0.0",
		"@natlibfi/fixugen-http-server": "^1.1.2",
		"@natlibfi/fixura": "^3.0.0",
		"@natlibfi/oracledb-mock": "^1.0.0",
		"babel-plugin-istanbul": "^6.1.1",
		"babel-plugin-rewire": "^1.2.0",
		"chai": "^4.3.7",
		"cross-env": "^7.0.3",
		"eslint": "^8.40.0",
		"mocha": "^10.2.0",
		"nodemon": "^3.0.1",
		"nyc": "^15.1.0"
	},
	"eslintConfig": {
		"extends": "@natlibfi/melinda-backend"
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": "maintained node versions"
				}
			]
		],
		"env": {
			"test": {
				"plugins": [
					"istanbul",
					"rewire"
				]
			}
		}
	},
	"nyc": {
		"exclude": [
			"**/*.spec.js"
		],
		"reporter": [
			"lcov",
			"html"
		],
		"require": [
			"@babel/register"
		],
		"sourceMap": false,
		"instrument": false,
		"lines": 80,
		"statements": 80,
		"functions": 80,
		"branches": 80
	}
}
